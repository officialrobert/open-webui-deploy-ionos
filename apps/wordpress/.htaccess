# WordPress .htaccess
# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# Handle openapi.json requests - redirect to WordPress REST API
RewriteRule ^openapi\.json$ /index.php?rest_route=/custom-api/v1/openapi.json [L,QSA]

# WordPress rewrite rules
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# END WordPress
