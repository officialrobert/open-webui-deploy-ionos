# Development Dockerfile for WordPress + Custom REST API Plugin
FROM php:8.2-apache

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libzip-dev \
    zip \
    unzip \
    curl \
    git \
    nodejs \
    npm \
    mariadb-client \
    && rm -rf /var/lib/apt/lists/*

# Install PHP extensions
RUN docker-php-ext-install \
    mysqli \
    pdo_mysql \
    zip \
    opcache

# Enable Apache modules
RUN a2enmod rewrite

# Set working directory
WORKDIR /var/www/html

# Copy WordPress files
COPY . .

# Set up development environment for the plugin
WORKDIR /var/www/html/wp-content/plugins/custom-rest-api

# Copy package files and install ALL dependencies (including dev)
COPY wp-content/plugins/custom-rest-api/package*.json ./
COPY wp-content/plugins/custom-rest-api/tsconfig.json ./

# Install Node.js dependencies (including dev dependencies)
RUN npm install

# Copy plugin source files
COPY wp-content/plugins/custom-rest-api/src/ ./src/

# Build TypeScript for initial setup
RUN npm run build

# Return to WordPress root
WORKDIR /var/www/html

# Set proper permissions
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html

# Install WP-CLI
RUN curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar && \
    chmod +x wp-cli.phar && \
    mv wp-cli.phar /usr/local/bin/wp

# Copy startup script
COPY start-wordpress.js /usr/local/bin/start-wordpress.js
RUN chmod +x /usr/local/bin/start-wordpress.js

# Expose port
EXPOSE 80

# Start WordPress
CMD ["node", "/usr/local/bin/start-wordpress.js"]
